<html>
<head>
	<title>Lingua: Learning</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="css/index.css">
</head>
<body>

<ul>
  <li id="logo"><a><img src="images/logo.svg" class="img-responsive" style="filter: grayscale(100%)"></a></li>
  <li><a><img src="images/learn.svg" class="img-responsive"></a></li>
  <li><a href="/chatroom"><img src="images/chat.svg" class="img-responsive"></a></li>
  <li><a href="/help"><img src="images/help.svg" class="img-responsive"></a></li>
  <li id="profile"><a href="/profile"><img src="images/profile.svg" class="img-responsive"></a></li>
</ul>

<div class="content">
<h3>Progress: beginner</h2>
<div class="progress" style="width:90%">
  <div class="progress-bar progress-bar-striped active" role="progressbar"
  aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:40%">
  16/50 points
  </div>
</div>
<br>
<h3>Lessons (new/in-progress)</h2>
<div id="lessons" style="height:250px;width:330px;border:1px solid #ccc;overflow:auto;">
  {{#each newquiz}}
  <div class="container" id="{{id}}">
    <a href="" onclick="clickOn({{id}})">
      <img src="images/{{image}}" style="filter: grayscale(100%)" alt="enter lesson">
      <p class="centered">{{name}}</p>
    </a>
  </div>
  {{/each}}
</div>

<div id="popupquiz" style="visibility: hidden; height:250px;width:330px;border:1px solid #ccc;overflow:auto;">
  Quiz content
  <button>enter</button>
</div>

<script>
  function clickOn(id){
    document.getElementById("popupquiz").style.visibility = 'visible';
    document.getElementById("lessons").style.visibility = 'hidden';
  }
</script>

<br>
<h3>Completed Lessons</h2>
<div style="height:140px;width:330px; border:1px solid #ccc;overflow:auto;">
<!--You haven't completed any quizzes!-->
  {{#each oldquiz}}
  <div class="container" id="{{id}}">
    <a href="">
      <img src="images/{{image}}" style="filter: grayscale(100%)" alt="enter lesson">
      <p class="centered">{{name}}</p>
    </a>
  </div>
  {{/each}}
<br>
</div>
</body>
</html>