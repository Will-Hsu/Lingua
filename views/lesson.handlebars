<html>
<head>
	<title>Lingua: Lesson</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/svg" href="/images/favicon.svg"/>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <script src="/js/lesson.js"></script>
  <link rel="stylesheet" href="/css/index.css">
  <link rel="stylesheet" href="/css/lesson.css">
</head>
<body>

<ul>
  <li id="logo"><a><img src="/images/logo.svg" class="img-responsive"></a></li>
  <li><a href="/index"><img src="/images/learn_fill.svg" class="img-responsive"></a></li>
  <li><a href="/chatroom"><img src="/images/chat.svg" class="img-responsive"></a></li>
  <li><a href="/help"><img src="/images/help.svg" class="img-responsive"></a></li>
  <li id="profile"><a href="/profile"><img src="/images/profile.svg" class="img-responsive"></a></li>
</ul>

<div id="quiz">
  <h3 id="quizName">{{lessonname}}</h3>
  <p style="color: white;" id="ptpossible">Points Possible: 1</p>
  <p style="color: white;" id="ptearned">Points Earned: 0</p>
  <p style="color: white;" id="progress">Progress: 1 out of 5</p>
  <button id="quitButton" onclick= "clickOn(event)">Quit</button>
  <button id="checkButton">Check</button>
</div> 

 <div style="display: none;" id="quiz-results">
    <p id="quiz-results-message"></p>
    <p id="quiz-results-score"></p>
    <a href="/lesson/{{lessonname}}"><button id="quiz-retry-button">Retry</button></a>
    <a href="/index"><button id="quiz-return-button">Done</button></a>
  </div>

<div id="popupquiz" style="left:6%">
  <div id="innerquiz">
    <h4 id="title">Are you sure you want to quit? You will loose all your progress and points earned!</h4><br>
    <a href="/index" class="floated"><button type="button" class="btn btn-success" style="margin-left: 10px;" id="changeProf1">Confirm</button></a>
    <a onclick="clickOff(event)"class="floated"><button type="button" class="btn btn-light" id="changeProf2">Cancel</button></a>  
  </div>
</div>

<script>
    function clickOn(e){
    var toggle = document.getElementsByClassName('toggle');
    for (var i = 0; i < toggle.length; i ++) toggle[i].style.display = 'none';
    document.getElementById("popupquiz").style.display = 'block';
    e.preventDefault();
  }
  function clickOff(e){
    var toggle = document.getElementsByClassName('toggle');
    for (var i = 0; i < toggle.length; i ++) toggle[i].style.display = 'block';
    document.getElementById("popupquiz").style.display = 'none';
    e.preventDefault();
  }
</script>

</body>
</html>